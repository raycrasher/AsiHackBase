                        <Label.Style>
                            <Style TargetType="Label">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Source={StaticResource Model}, Path=RunOnStartup}" Value="false">
                                        <Setter Property="Content" Value="run on startup"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Source={StaticResource Model}, Path=RunOnStartup}" Value="true">
                                        <Setter Property="Content" Value="don't run on startup"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Label.Style>
                    </Label>
                </StackPanel>
            </Button>
        </ma:WindowCommands>
    </ma:MetroWindow.RightWindowCommands>
</ma:MetroWindow>
